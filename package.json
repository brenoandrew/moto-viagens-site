{
  "name": "moto-viagens-site",
  "version": "1.0.0",
  "description": "Site em construção para Moto Viagens - Plataforma de viagens de motocicleta",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "live-server --port=8080 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o css/styles.min.css css/styles.css",
    "minify-js": "terser js/script.js -o js/script.min.js",
    "deploy": "gh-pages -d .",
    "validate": "html-validate index.html"
  },
  "keywords": [
    "motocicleta",
    "viagem",
    "brasil",
    "aventura",
    "turismo",
    "moto",
    "site-construcao"
  ],
  "author": "Moto Viagens Team",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.5.0",
    "live-server": "^1.2.2",
    "terser": "^5.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seuusuario/moto-viagens-site.git"
  },
  "homepage": "https://seuusuario.github.io/moto-viagens-site",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}